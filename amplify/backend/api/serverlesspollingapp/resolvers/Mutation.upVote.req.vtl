{
    "version": "2018-05-29",
    "operation": "UpdateItem",
    "key" : {
      "id" : .dynamodb.toDynamoDBJson(.arguments.id)
    },
    "update": {
      "expression" : "set #upvotes = #upvotes + :updateValue",
      "expressionNames" : {
           "#upvotes" : "upvotes"
       },
       "expressionValues" : {
           ":updateValue" : { "N" : "1" }
       }
    }
}
